@model Championship_of_box.Models.BattleViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Battle</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @Html.Partial("~/Views/Partial/NavBar_PartialPage.cshtml")
    <div class="container body-content">
        @using (Html.BeginForm((Model.Id.HasValue) ? "EditBattle" : "CreateBattle", "Home", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.Id)
            <h2 style="border-bottom: 1px solid #337ab7;">Battle</h2>
            <div class="form-group">
                <label for="date">Date:</label>
                @Html.TextBoxFor(m => m.Date, "{0:yyyy-MM-ddThh:mm}", new { @class = "form-control", id = "date", type = "datetime-local" })
            </div>
            <div class="form-group">
                <label for="amount-of-rounds">Amount of rounds:</label>
                @Html.TextBoxFor(m => m.AmountOfRounds, new { @class = "form-control", id = "amount-of-rounds" })
            </div>
            <div class="form-group">
                <label for="boxer-1">Boxer 1 (winner):</label>
                @Html.TextBoxFor(m => m.Boxer1, new { @class = "form-control", id = "boxer-1" })
            </div>
            <div class="form-group">
                <label for="boxer-2">Boxer 2:</label>
                @Html.TextBoxFor(m => m.Boxer2, new { @class = "form-control", id = "Boxer2" })
            </div>
            <div class="form-group">
                <label for="referee-points">Referee points:</label>
                @Html.TextBoxFor(m => m.RefereePoints, new { @class = "form-control", id = "referee-points" })
            </div>
            <button class="btn btn-primary" type="submit">Save</button>
            <button class="btn btn-primary" type="button" onclick="location.assign('/Home/GetBattlePage')">Cancel</button>
        }
    </div>

</body>
</html>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")